{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@live2d/*": ["./live2d/src/*"]
    }
  },
  "include": [
    "src/live2d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
