{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@live2d/*": ["./live2d/framework/src/*"]
    }
  },
  "include": [
    "src/live2d.ts",
    "live2d/core/*.ts",
    "live2d/framework/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
